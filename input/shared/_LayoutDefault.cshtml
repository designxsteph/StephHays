@{
    Layout = "_LayoutBase.cshtml";
}
@section ExtraHeaders
{
    @RenderSection("ExtraHeaders", required: false)
}

@RenderBody()

@if(!Document.Keys.Contains("DisableConnect"))
{
    <section id="connect" class='collapse bg-alpha position-relative @(Document.GetString(Keys.Title).Equals("Home") ? "show" : "")'>
        <div class="container-lg py-6">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    @Html.Partial("~/shared/_Connect.cshtml")
                </div>
            </div>
        </div>
    </section>
}